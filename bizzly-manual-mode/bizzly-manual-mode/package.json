{
  "name": "bizzly",
  "version": "1.0.0",
  "description": "A suite of multiple enterprise-grade applications built with Fastify and TypeScript.",
  "type": "module",
  "keywords": [
    "bizzly",
    "fastify",
    "typescript",
    "tailwindcss",
    "nodejs"
  ],
  "author": "Mackgame4",
  "license": "ISC",
  "scripts": {
    "build:backend": "tsc --project core/backend/tsconfig.json",
    "start:backend": "node dist/backend/index.js",
    "dev:backend": "tsx watch core/backend/index.ts",
    "build:frontend": "cd core/frontend && vue-tsc -b && vite build",
    "preview:frontend": "cd core/frontend && vite preview",
    "dev:frontend": "cd core/frontend && vite",
    "dev": "concurrently -k \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build": "npm run build:backend && npm run build:frontend",
    "start": "concurrently -k \"npm:start:backend\" \"npm:preview:frontend\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "fastify": "^5.4.0",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@types/node": "^24.2.1",
    "pino-pretty": "^13.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.9.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.7.0",
    "vite": "^7.1.0",
    "vue-tsc": "^3.0.5",
    "concurrently": "^9.0.1"
  }
}
